{% extends 'base.html.twig' %}

{% block title %}Modifier vos information personelles{% endblock %}

{% block body %}
<div class="containerModificationRegister">
    <div class="formContainerModificationRegister">
        <h1>Modifier vos information personel</h1>
        {{ form_start(form) }}
        
            {{ form_errors(form) }}
            {{ form_row(form.speudo) }}
            {{ form_row(form.Nom) }}
            {{ form_row(form.Prenom) }}
            {{ form_row(form.email) }}
            {{ form_row(form.adress) }}
            {{ form_row(form.telephone) }}
            
            <div class="retourRegister">
                {{ form_row(form.submit) }}
           
                <div class="retour">
                    <a  href="{{ path('chat')}}" >Retour</a>
                </div>
            </div>

        {{ form_end(form) }}  
    
    </div>

</div>


{% endblock %}